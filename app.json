{
  "name": "vcf-collector",
  "description": "A contact collection and management bot with PostgreSQL + Node.js backend.",
  "repository": "https://github.com/yourusername/vcf-collector",
  "keywords": ["node", "express", "pg", "vcf", "bot"],

  "addons": [
    {
      "plan": "heroku-postgresql",
      "description": "🗃️ Free PostgreSQL database for storing bot data."
    }
  ],

  "buildpacks": [
    {
      "url": "heroku/nodejs",
      "description": "📦 Node.js runtime for running the bot."
    },
    {
      "url": "https://github.com/clhuang/heroku-buildpack-webp-binaries.git",
      "description": "🖼️ WebP support for image processing."
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest",
      "description": "🎥 FFmpeg for audio/video processing."
    }
  ]
}